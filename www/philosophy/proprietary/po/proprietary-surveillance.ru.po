msgid "Spyware in Android"
msgstr "Программы-шпионы в Android"

#. type: Content of: <div>
msgid ""
"<span class=\"anchor-reference-id\">(<a href=\"#SpywareInAndroid"
"\">#SpywareInAndroid</a>)</span>"
