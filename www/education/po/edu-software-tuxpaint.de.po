#. type: Content of: <h3>
msgid "Description"
msgstr "Beschreibung"

#.  GNUN: localize URL /education/misc/tuxpaint-start-sm.jpg 
#. type: Content of: <div><a>
msgid "<a href=\"/education/misc/tuxpaint-start.jpg\">"
msgstr "<a href=\"/education/misc/tuxpaint-start.jpg\">"

#. type: Attribute 'alt' of: <div><a><img>
